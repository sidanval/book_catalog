{% extends 'base.html.twig' %}

{% block body %}
    <h1>Жанр</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ genre.name }}</td>
            </tr>
            <tr>
                <th>Книги</th>
                <td>
                    <a href="{{ path('book_genre', {id: genre.id}) }}">
                        Книги ({{ genre.books|length }})
                    </a>
                </td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline mt-3">
        <li class="list-inline-item">
            <a class="btn btn-light" href="{{ path('genre_index') }}">Назад</a>
        </li>
        {% if is_granted('genre_edit', genre) %}
            <li class="list-inline-item">
                <a class="btn btn-success" href="{{ path('genre_edit', { 'id': genre.id }) }}">Редактировать</a>
            </li>
        {% endif %}
        {% if is_granted('genre_delete', genre) %}
            <li class="list-inline-item">
                {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Удалить">
                {{ form_end(delete_form) }}
            </li>
        {% endif %}
    </ul>
{% endblock %}
