{% extends 'base.html.twig' %}

{% set title = 'Книги' %}
{% if author is defined %}
    {% set title = 'Книги автора: ' ~ author.fullName %}
{% elseif genre is defined %}
    {% set title = 'Книги жанра: ' ~ genre.name %}
{% endif %}

{% block body %}
    <h1>{{ title }}</h1>

    {% if searchForm is defined %}
    <div class="mt-3 mb-3">
        {{ form_start(searchForm, {attr: {class: 'form-inline form-search'}}) }}

            {{ form_row(searchForm.genre) }}

            {{ form_row(searchForm.author) }}

            <button type="submit" class="btn btn-light mb-2">Поиск</button>

        {{ form_end(searchForm) }}
    </div>
    {% endif %}

    {% if author is not defined and genre is not defined %}
        <p>
            <i>Будут показаны последние добавленные 10 книг</i>
        </p>
    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Опубликована</th>
                <th>Добавлена</th>
                <th>Жанр</th>
                <th>Автор</th>
                <th>Рейтинг</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td><a href="{{ path('book_show', { 'id': book.id }) }}">{{ book.id }}</a></td>
                <td>{{ book.name }}</td>
                <td>{% if book.releasedat %}{{ book.releasedat|date('Y-m-d') }}{% endif %}</td>
                <td>{% if book.createdat %}{{ book.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    {% if book.genre is not empty %}
                        <a href="{{ path('genre_show', {id: book.genre.id}) }}">
                            {{ book.genre.name}}
                        </a>
                    {% else %}
                        <i class="text-danger">Не задано</i>
                    {% endif %}
                </td>
                <td>
                    {% if book.author is not empty %}
                        <a href="{{ path('author_show', {id: book.author.id}) }}">
                            {{ book.author.fullName }}
                        </a>
                    {% else %}
                        <i class="text-danger">Не задано</i>
                    {% endif %}
                </td>
                <td>{{ book.rating }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('book_show', { 'id': book.id }) }}">просмотр</a>
                        </li>
                        {% if is_granted('book_edit', book) %}
                            <li>
                                <a href="{{ path('book_edit', { 'id': book.id }) }}">редактирование</a>
                            </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('book_create') %}
        <a class="btn btn-success" href="{{ path('book_new') }}">Добавить книгу</a>
    {% endif %}

{% endblock %}
