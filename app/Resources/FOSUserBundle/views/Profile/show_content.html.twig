{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">

    <div class="row">
        <div class="col-md-12">
            <h3>Основная информация</h3>

            <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
            <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>

            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-success">Изменить</a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">

            <h3>Избранные книги</h3>

            {{ include('book/table.html.twig', {books: app.user.favouriteBooks}) }}

        </div>
    </div>
</div>

